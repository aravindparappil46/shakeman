<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:persistent="true"
    tools:context=".MainActivity" >

    <ImageButton
        android:id="@+id/imageButton2"
        android:background="#00000000"
        android:layout_width="111dp"
        android:padding="0dp"
        android:layout_height="111dp"
        android:scaleType="fitXY"
        android:layout_alignParentRight="true"
        android:onClick="setbright"
        android:layout_alignTop="@+id/imageButton1"
        android:src="@drawable/brightnesszag" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="111dp"
        android:layout_height="111dp"
        android:layout_alignLeft="@+id/imageButton1"
        android:layout_below="@+id/imageButton1"
        android:layout_marginTop="46dp"
        android:background="#00000000"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:onClick="setdat"
        android:src="@drawable/datazag" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="111dp"
        android:layout_height="111dp"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_alignTop="@+id/imageButton3"
        android:background="#00000000"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:onClick="setwifi"
        android:src="@drawable/wifizag" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="111dp"
        android:layout_height="111dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:background="#00000000"
        android:onClick="setsil"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/bigsilentzag" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="111dp"
        android:layout_height="111dp"
        android:layout_alignLeft="@+id/imageButton3"
        android:layout_below="@+id/imageButton3"
        android:layout_marginTop="42dp"
        android:background="#00000000"
        android:onClick="sethotspot"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/hotspot" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="111dp"
        android:layout_height="111dp"
        android:layout_alignBottom="@+id/imageButton5"
        android:layout_alignLeft="@+id/imageButton4"
        android:background="#00000000"
        android:onClick="sethelp"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/help" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="AcidFly Â©" />
		
</RelativeLayout>
